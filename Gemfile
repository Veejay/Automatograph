  gem  'sass-rails',    ' ~> 3.2.3'
  gem  'coffee-rails',  ' ~> 3.2.1'
  gem  'uglifier',      ' >= 1.0.3'
end

group :developement do
  gem 'thin'
  gem 'awesome_print',  :require => 'ap'
  gem 'pry',            :require => 'pry'
end
